{
    
    // Typography adjustments for Retina display
    "editor.fontSize": 13,
    "editor.lineHeight": 22,
    "editor.suggestFontSize": 13,
    "editor.suggestLineHeight": 22,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.3,
    
    // Padding and spacing adjustments
    "editor.padding.top": 12,
    "workbench.tree.indent": 12,
    
    // Keep your existing font settings but adjusted
    "editor.fontFamily": "Geist Mono, JetBrains Mono, Fira Code",
    "editor.fontWeight": "400",
    
    // Adjust word wrap for better screen usage
    "editor.wordWrapColumn": 140,
    
    // CodeSnap adjustments for screenshots
    "codesnap.containerPadding": "4em",
    
    // Keep all your other existing settings...
    "editor.copyWithSyntaxHighlighting": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.emptySelectionClipboard": false,
    "workbench.editor.enablePreview": false,
    "window.newWindowDimensions": "inherit",
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimTrailingWhitespace": true,
    "diffEditor.renderSideBySide": false,
    "editor.snippetSuggestions": "top",
    "editor.detectIndentation": false,
    "window.nativeFullScreen": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "workbench.editor.showTabs": "none",
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "off",
    "editor.guides.indentation": false,

    // existing noise reduction settings
    "breadcrumbs.enabled": false,
    "scm.diffDecorations": "none",
    "editor.hover.delay": 1500,
    "editor.hover.enabled": true,
    "editor.matchBrackets": "never",
    "workbench.tips.enabled": false,
    "editor.colorDecorators": false,
    "git.decorations.enabled": false,
    "workbench.startupEditor": "none",
    "editor.lightbulb.enabled": "off",
    "editor.selectionHighlight": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "problems.decorations.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.hideCursorInOverviewRuler": true,
    
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    
    "workbench.colorTheme": "React Theme",
    "workbench.iconTheme": "eq-material-theme-icons-light",
    "workbench.sideBar.location": "right",
    "workbench.activityBar.location": "hidden",
    "workbench.statusBar.visible": false,
    
    "terminal.integrated.fontFamily": "MesloLGS NF, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.shellIntegration.decorationsEnabled": "both"
}
